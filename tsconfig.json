{
    "compilerOptions": {
      "target": "es5", 
      "module": "es6", 
      "strict": true, 
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist", 
      "rootDir": "./src", 
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  